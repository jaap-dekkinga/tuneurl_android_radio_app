<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:padding="8dp"
    tools:context=".StationDetailsActivity">

    <!-- Back Arrow -->
    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_back"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:contentDescription="Back"
        app:tint="@android:color/white" />

    <!-- Title -->
    <TextView
        android:id="@+id/tvHeaderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Absolute Country Hits"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_toEndOf="@id/ivBack"
        android:layout_alignTop="@id/ivBack"
        android:layout_marginStart="6dp" />

    <!-- Content Card -->
    <LinearLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/ivBack"
        android:layout_marginStart="12dp"
        android:layout_marginTop="32dp">

        <!-- Station Logo -->
        <ImageView
            android:id="@+id/ivStationLogo"
            android:layout_width="112dp"
            android:layout_height="72dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/station_absolutecountry"
            android:contentDescription="Station Logo" />

        <!-- Station Info -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvStationName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Absolute Country Hits"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvStationSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The Music Starts Here"
                android:textColor="#B3FFFFFF"
                android:textSize="15sp"
                android:layout_marginTop="5dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Long Description -->
    <TextView
        android:id="@+id/tvStationLongDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/contentLayout"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="20dp"
        android:text="All your favorite country hits and artists, from Johnny Cash to Taylor Swift..."
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:lineSpacingExtra="4dp" />

    <!-- Okay Button -->
    <TextView
        android:id="@+id/btnOkay"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Okay"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:gravity="center"
        android:backgroundTint="#262628"
        android:background="#262628"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:textSize="16sp" />

</RelativeLayout>
